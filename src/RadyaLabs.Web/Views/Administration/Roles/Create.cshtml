@model RoleView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Headers.Role</h5>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Title)
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        @Html.FormTextBoxFor(model => model.Title)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        @Html.FormLabelFor(model => model.Permissions)
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        @Html.TreeFor(model => model.Permissions, 2)
                    </div>
                    <div class="control-validation col">
                        @Html.ValidationMessageFor(model => model.Permissions)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-lg-7">
                        <button type="submit" class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
